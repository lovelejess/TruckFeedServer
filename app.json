{
  "name": "TruckFeedServer",
  "scripts": {
    "postdeploy": "heroku run rake db:migrate && heroku ps:scale web=1 && heroku restart"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
